    <script>
        function showFormCreateNewProvince() {
            getContentForModal("{{ path('app_location_create_new_location') }}", "Ajouter une nouvelle ville");
        }
        function saveNewProvince() {
            let url = "{{ path('app_location_create_new_location')}}";
            _doPost('#entry-form-new', url, '{{ path('app_location') }}');
            return false;
        }
        function editEditProvince(id) {
            let url = replacePlaceholder("{{ path('app_location_edit_province', {'id': 'placeholder'}) }}", id);
            getContentForModal(url, "Éditer la ville");
        }
        function saveEditProvince(id) {
            let url = replacePlaceholder("{{ path('app_location_edit_province', {'id': 'placeholder'}) }}", id);
            return _doPost('#entry-form-'+id, url);
        }
        function newCommune(id) {
            let url = replacePlaceholder("{{ path('app_agency_add_new_commune', {'id': 'placeholder'}) }}", id);
            getContentForModal(url, "Ajouter commune");
        }
        function saveNewCommune(id) {
            let url = replacePlaceholder("{{ path('app_agency_add_new_commune', {'id': 'placeholder'}) }}", id);
            _doPost('#entry-form-'+id, url, '{{ path('app_location') }}');
            return false;
        }
        function editEditCommune(id) {
