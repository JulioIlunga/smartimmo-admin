{% extends 'agent_work_space/index.html.twig' %}

{% block title %}Smart-Immo | Agent Immobilier{% endblock %}
{% block style %}
    <style>
        /* ====== Admin: Agents list ====== */
        :root{
            --ink-weak:#8b949e;
            --ink-soft:#a6adba;
            --soft-border: rgba(16,18,22,.08);
        }

        /* Header helpers */
        .bg-success-subtle{ background:rgba(25,135,84,.12)!important; }
        .border-success-subtle{ border-color:rgba(25,135,84,.35)!important; }
        .bg-danger-subtle{ background:rgba(220,53,69,.12)!important; }
        .border-danger-subtle{ border-color:rgba(220,53,69,.32)!important; }

        /* Card shell */
        .agent-card{
            background:#fff;
            border:1px solid var(--soft-border);
            border-radius:1rem;
            box-shadow:0 8px 22px rgba(16,18,22,.06);
            padding:1rem;
            display:flex; flex-direction:column; gap:.75rem;
            transition:transform .15s ease, box-shadow .15s ease, border-color .15s ease;
        }
        .agent-card:hover{
            transform:translateY(-1px);
            box-shadow:0 14px 30px rgba(16,18,22,.10);
        }
        .agent-card.is-blocked{
            border-color:rgba(220,53,69,.22);
            box-shadow:0 8px 22px rgba(220,53,69,.06);
        }

        /* Top: avatar + info */
        .agent-media{
            display:flex; align-items:center; gap:.9rem;
        }
        .avatar-wrap{
            position:relative;
            width:72px; height:72px; min-width:72px;
            border-radius:50%;
            overflow:hidden;
            background:#f1f3f6;
            box-shadow: inset 0 0 0 1px rgba(0,0,0,.04);
        }
        .avatar{
            width:100%; height:100%; object-fit:cover; display:block;
        }
        .status-badge{
            position:absolute; left:50%; bottom:-8px; transform:translateX(-50%);
            display:inline-flex; align-items:center;
            padding:.2rem .5rem; border-radius:.6rem;
            font-size:.72rem; font-weight:700;
            white-space:nowrap;
        }

        /* Main text */
        .agent-main .title{
            font-weight:800; letter-spacing:.02em;
        }
        .agent-main .metrics{
            display:flex; flex-wrap:wrap; gap:.4rem .5rem; margin-top:.25rem;
        }
        .agent-card .chip{
            display:inline-flex; align-items:center; gap:.35rem;
            padding:.25rem .5rem; border-radius:.55rem;
            font-size:.78rem; font-weight:700;
            color:#30363c; background:#f6f8fa; border:1px solid #e9edf2;
        }
        .agent-card .chip .mdi{ font-size:1rem; }
        .agent-card .chip.rating{ background:#fff7e6; border-color:#ffe0a3; }

        /* Actions row */
        .agent-actions{
            margin-top:.25rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: .5rem;
        }
        .agent-actions .btn{ font-weight:700; }

    </style>

{% endblock %}
{% block bodyHeader %}
    <div class="admin-header card border-0 shadow-sm rounded-4 mb-3">
        <div class="card-body py-3 py-md-3">
            <div class="d-flex flex-wrap align-items-center gap-2">
                <div class="flex-grow-1">
                    <div class="text-muted small d-flex align-items-center gap-2">
                        <i class="mdi mdi-shield-crown-outline"></i> Administration
                        <i class="mdi mdi-chevron-right mdi-18px opacity-50"></i> Agents immobiliers
                    </div>
                    <h4 class="fw-bold mb-0 mt-1">
                        Agents immobiliers
                        <span class="badge rounded-pill bg-success-subtle text-success border border-success-subtle ms-2">
              {{ count }}
            </span>
                    </h4>
                </div>

                <a href="{{ path('app_smart_immo_agents_export_in_cvs') }}"
                   class="btn btn-outline-dark rounded-pill d-flex align-items-center gap-2 px-3">
                    <i class="mdi mdi-file-export"></i>
                    Exporter la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}


{% block bodyContent %}
    {% include 'agent_work_space/partials/_flag.html.twig' %}

    <div class="row g-3 g-md-4" id="listing-admin-table">
        {% for agent in agents %}
            {% set blocked = agent.block == true %}
            {% set rating   = averageRating[agent.id] is defined ? averageRating[agent.id]|number_format(1, '.') : '0.0' %}
            {% set ratingN  = ratingCount[agent.id] is defined ? ratingCount[agent.id] : 0 %}

            <div class="col-md-6">
                <article class="agent-card h-100 {{ blocked ? 'is-blocked' : '' }}">
                    <div class="agent-media">
                        <div class="avatar-wrap">
                            {% if agent.picture %}
                                <img src="{{ agent.picture }}" alt="{{ agent.firstname }} {{ agent.name }}" class="avatar" loading="lazy">
                            {% else %}
                                <img src="{{ asset('assets/img/imageIcon.png') }}" alt="Avatar" class="avatar" loading="lazy">
                            {% endif %}
                            {% if blocked %}
                                <span class="status-badge bg-danger-subtle text-danger border border-danger-subtle">
                                  <i class="mdi mdi-account-cancel-outline me-1"></i> Bloqué
                                </span>
                            {% endif %}
                        </div>
                        <div class="agent-main">
                            <h6 class="title mb-2">
                                {{ agent.firstname }} {{ agent.name }}
                                <span class="text-muted fw-normal">• {{ agent.phone }}</span> •

                                <!-- Étoile topAgent cliquable -->
                                <span class="top-2 end-0 mt-2 cursor-pointer toggle-top-agent" data-user-id="{{ agent.id }}">
                                    {% if agent.isTopAgent %}
                                        <i class="mdi mdi-star text-warning" style="font-size: 1.5rem;"></i>
                                    {% else %}
                                        <i class="mdi mdi-star-outline" style="font-size: 1.5rem;"></i>
                                    {% endif %}
                                </span>
                            </h6>

                            <div class="metrics">
                                <span class="chip">
                                  <i class="mdi mdi-home-group-outline"></i>
                                  {{ agent.properties.count }} annonces
                                </span>
                                <span class="chip">
                                  <i class="mdi mdi-calendar-blank-outline"></i>
                                  {{ agent.createdAt|date('d/m/y') }}
                                </span>
                                <span class="chip rating">
                                  <i class="mdi mdi-star text-warning"></i>
                                  {{ rating }} <span class="text-muted">/5</span>
                                  <span class="text-danger fw-semibold ms-1">({{ ratingN }})</span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="agent-actions">
                        {% if not blocked %}
                            <a href="{{ path('app_smart_immo_admin_real_estate_agent_action', {id: agent.id}) }}"
                               class="btn btn-outline-danger btn-sm rounded-pill">
                                <i class="mdi mdi-account-remove me-1"></i> Bloquer
                            </a>
                        {% else %}
                            <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger-subtle">
                                <i class="mdi mdi-account-minus"></i> Agent bloqué
                              </span>
                        {% endif %}

                        <div class="d-flex gap-2">
                            <a href="{{ path('app_agent_reviews', {id: agent.id}) }}"
                               class="btn btn-outline-dark btn-sm rounded-pill">
                                <i class="mdi mdi-eye-outline me-1"></i> Avis
                            </a>
                            <a href="{{ path('app_agent_property', {id: agent.id, type: 2}) }}"
                               class="btn btn-dark btn-sm rounded-pill">
                                <i class="mdi mdi-format-list-bulleted me-1"></i> Annonces
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        {% endfor %}
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.toggle-top-agent').forEach(function(star) {
                star.addEventListener('click', function() {
                    const userId = this.dataset.userId;
                    const icon = this.querySelector('i');

                    fetch(`/admin/user/${userId}/toggle-top`, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'X-CSRF-TOKEN': '{{ csrf_token("toggle_top_agent") }}',
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if(data.topAgent) {
                                icon.classList.remove('mdi-star-outline', 'text-secondary');
                                icon.classList.add('mdi-star', 'text-warning');
                            } else {
                                icon.classList.remove('mdi-star', 'text-warning');
                                icon.classList.add('mdi-star-outline', 'text-secondary');
                            }
                        })
                        .catch(error => console.error('Erreur:', error));
                });
            });
        });
    </script>
{% endblock %}
