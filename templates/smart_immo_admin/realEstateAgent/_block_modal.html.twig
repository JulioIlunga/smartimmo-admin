<div class="modal fade" id="blockAgentModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="{{ path('app_agent_block_reasons_modal', {'id': agent.id}) }}">
        <div class="modal-header">
          <h5 class="modal-title">Bloquer {{ agent.firstname }} {{ agent.name }}</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <div class="mb-3">
            <label for="reason" class="form-label">Quelles sont les Raison du blocage</label>
            <input type="text" class="form-control" name="reason" id="reason" required>
          </div>

          <div class="form-check">
            <input type="checkbox" class="form-check-input" name="permanent" id="permanent">
            <label for="permanent" class="form-check-label">Interdire l'accès à la plateforme</label>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
          <button type="submit" class="btn btn-danger">Confirmer</button>
        </div>
      </form>
    </div>
  </div>
</div>
