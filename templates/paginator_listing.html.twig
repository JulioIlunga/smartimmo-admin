{% if pages > 1 %}
    {# Boundaries for prev/next #}
    {% set leftpage  = page > 1 ? page - 1 : 1 %}
    {% set rightpage = page < pages ? page + 1 : pages %}

    {# How many pages to show at the extremes and around the current page #}
    {% set extremePagesLimit = 2 %}
    {% set nearbyPagesLimit  = 2 %}

    <nav class="mt-4" aria-label="Pagination des résultats">
        <ul id="pagination" class="pagination pagination-sm justify-content-center gap-1">

            {# Previous #}
            <li class="page-item{% if page == 1 %} disabled{% endif %}">
                <a class="page-link"
                   aria-label="Page précédente"
                   data-page="{{ leftpage }}"
                   href="{{ url }}?{{ {'page': leftpage, 'type': type, 'city': city, 'commune': commune, 'min': min, 'max': max, 'periodicity': periodicity }|url_encode }}">
                    &laquo;
                </a>
            </li>

            {# Leading pages #}
            {% if page > 1 %}
                {% for i in range(1, extremePagesLimit) %}
                    {% if i < page - nearbyPagesLimit %}
                        <li class="page-item">
                            <a class="page-link"
                               data-page="{{ i }}"
                               href="{{ url }}?{{ {'page': i, 'type': type, 'city': city, 'commune': commune, 'min': min, 'max': max, 'periodicity': periodicity }|url_encode }}">{{ i }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
                {% if extremePagesLimit + 1 < page - nearbyPagesLimit %}
                    <li class="page-item disabled">
                        <span class="page-link border-0 bg-transparent">…</span>
                    </li>
                {% endif %}
            {% endif %}

            {# Pages around current #}
            {% for i in range(page - nearbyPagesLimit, page + nearbyPagesLimit) %}
                {% if i > 0 and i <= pages %}
                    <li class="page-item {% if i == page %}active{% endif %}">
                        <a class="page-link"
                           aria-current="{% if i == page %}page{% endif %}"
                           data-page="{{ i }}"
                           href="{{ url }}?{{ {'page': i, 'type': type, 'city': city, 'commune': commune, 'min': min, 'max': max, 'periodicity': periodicity }|url_encode }}">{{ i }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {# Trailing pages #}
            {% if (pages - extremePagesLimit) > (page + nearbyPagesLimit) %}
                <li class="page-item disabled">
                    <span class="page-link border-0 bg-transparent">…</span>
                </li>
            {% endif %}
            {% for i in range(pages - extremePagesLimit + 1, pages) %}
                {% if i > page + nearbyPagesLimit %}
                    <li class="page-item">
                        <a class="page-link"
                           data-page="{{ i }}"
                           href="{{ url }}?{{ {'page': i, 'type': type, 'city': city, 'commune': commune, 'min': min, 'max': max, 'periodicity': periodicity }|url_encode }}">{{ i }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            <li class="page-item{% if page == pages %} disabled{% endif %}">
                <a class="page-link"
                   aria-label="Page suivante"
                   data-page="{{ rightpage }}"
                   href="{{ url }}?{{ {'page': rightpage, 'type': type, 'city': city, 'commune': commune, 'min': min, 'max': max, 'periodicity': periodicity }|url_encode }}">
                    &raquo;
                </a>
            </li>

        </ul>
    </nav>
{% endif %}