<script>
    (function () {
        // Old domains → redirect to new
        var OLD_HOSTS = ['smartimmo-rdc.com', 'www.smartimmo-rdc.com'];
        var NEW_HOST  = 'www.smartimmo-app.com';

        // Only run if we’re actually on the old host
        if (OLD_HOSTS.indexOf(location.hostname) !== -1) {
            // Always use HTTPS on the new site
            var target = 'https://' + NEW_HOST + location.pathname + location.search + location.hash;

            // Avoid loops
            if (location.href !== target) {
                // replace() avoids keeping the old URL in browser history
                window.location.replace(target);
            }
        }
    })();
</script>

