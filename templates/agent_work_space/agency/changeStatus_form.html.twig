<fieldset id="entry-form-fieldset-{{ agencyAgent.id }}" class="aa-fieldset" {% if agencyAgent.id != null %}disabled aria-disabled="true"{% endif %}>
    <div class="aa-card">
        {% if agencyAgent.id != null %}
            <span class="status-chip">
                <i class="mdi mdi-check-decagram-outline me-1"></i>Déjà affilié
            </span>
        {% endif %}

        <div class="d-flex align-items-center gap-3">
            <div>
                {% if agencyAgent.agency.logo %}
                    <img src="{{ agencyAgent.agency.logo }}" class="aa-logo" alt="Logo agence">
                {% else %}
                    <img src="{{ asset('assets/img/imageIcon.png') }}" class="aa-logo" alt="Logo agence">
                {% endif %}
            </div>

            <div class="aa-meta">
                <h6 class="fw-bold mb-1 text-dark">{{ agencyAgent.agency.name }}</h6>
                <div class="text-muted small">{{ agencyAgent.agency.adress }}</div>
                <span class="code-chip">Code : {{ agencyAgent.agency.code }}</span>
            </div>
        </div>

        <div class="aa-action ms-auto mt-lg-5">
            {{ form_widget(form) }}
        </div>
    </div>
</fieldset>
