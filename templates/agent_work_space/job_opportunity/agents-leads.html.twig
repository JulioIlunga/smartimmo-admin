{% extends 'agent_work_space/index.html.twig' %}

{% block title %}Mes réclamations{% endblock %}

{% block bodyContent %}
<div class="m-2">
    <h4 class="mb-4 fw-bold">Leads traités</h4>
    {# {{ dump(claims) }} #}
    {% if claims is empty %}
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-5 text-center">
                <img src="{{ asset('assets/img/nodata.jpg') }}" alt="" class="mb-3" style="max-width:180px;">
                <h5 class="fw-semibold">Aucune opportunité trouvée</h5>
                {# <p class="text-muted mb-0">Vous n’avez encore effectué aucune réclamation.</p> #}
            </div>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 g-md-4">
            {% for claim in claims %}
                <div class="col">
                    <article class="card border-0 rounded-4 shadow-sm h-100">
                        <div class="card-body p-3 p-md-4 d-flex flex-column">

                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="fw-semibold mb-0 text-truncate">
                                    Lead {{ claim.lead.id }}
                                </h6>
                                <span class="badge 
                                    {% if claim.status == 'pending' %} bg-warning text-dark
                                    {% elseif claim.status == 'claimed' %} bg-success
                                    {% elseif claim.status == '' %} bg-danger
                                    {% else %} bg-secondary
                                    {% endif %}">
                                    {{ claim.status|capitalize }}
                                </span>
                            </div>

                            <!-- Infos Claim -->
                            <div class="mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="mdi mdi-account-tie text-success me-2"></i>
                                    <small class="text-muted">
                                        Créé par <strong>{{ claim.lead.user.firstname }} {{ claim.lead.user.name }}</strong>
                                    </small>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <i class="mdi mdi-calendar-clock text-primary me-2"></i>
                                    <small class="text-muted">
                                        Traité le <strong>{{ claim.claimedAt|date('d/m/Y H:i') }}</strong>
                                    </small>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="mdi mdi-account-tie text-success me-2"></i>
                                    <small class="text-muted">
                                        Traité par l’agent <strong>{{ claim.agent.firstname }} {{ claim.agent.name }}</strong>
                                    </small>
                                </div>
                            </div>

                            <!-- Actions -->
                            {# <div class="mt-auto">
                               <button type="button"
                                            class="btn btn-soft-dark btn-outline-primary btn-sm rounded-pill js-lead-details"
                                            data-url="{{ path('app_customer_request_show_modal', {'id': claim.lead.id}) }}">
                                        <i class="mdi mdi-eye-outline me-1"></i> Détails
                                </button>
                            </div> #}

                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

{% endblock %}


