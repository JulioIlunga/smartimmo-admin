{% extends 'agent_work_space/index.html.twig' %}
 
{% block title %}Dashboard-Admin | Smart-Immo{% endblock %}

{% block bodyHeader %}
    <div class="d-flex align-items-center justify-content-between">
        <h4 class="fw-bold mb-0">Tableau de bord</h4>
        <div class="input-group border bg-white rounded-9 date-range">
            <span class="input-group-text mdi bg-white mdi-calendar-month border-0 py-2 rounded-9 pe-2" id="basic-addon1"></span>
            <input type="text" class="form-control bg-white border-0 rounded-9 ps-1 py-2" id="basicDate1" value="05-12-2018 to 06-12-2018" aria-label="Username" aria-describedby="basic-addon1" data-input>
        </div>
    </div>

{% endblock %}

{% block bodyContent %}
    <div class="row pt-4 mt-2">
        <div class="col-lg-12">
            <div class="col-6 col-md-3 mb-4">
                <div class="border rounded-9 p-4 bg-white border-primary border-size">
                    <h2 class="fw-bold text-primary">
                        <i class="mdi mdi-account-tie"></i> {{ agents }}
                    </h2>
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="mb-0 text-muted">Agents</p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <div class="border rounded-9 p-4 bg-white border-success border-size">
                    <h2 class="fw-bold text-success">
                        <i class="mdi mdi-account-multiple"></i> {{ customers }}
                    </h2>
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="mb-0 text-muted">Clients</p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <div class="border rounded-9 p-4 bg-white border-warning border-size">
                    <h2 class="fw-bold text-warning">
                        <i class="mdi mdi-home-city"></i> {{ annonces }}
                    </h2>
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="mb-0 text-muted">Annonces</p>
                    </div>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="bg-update row align-items-center m-0 rounded-9 p-5 g-4">
                    <div class="m-0 p-0 col-sm-7 text-center text-sm-start order-1 order-sm-0">
                        <small class="text-danger">Du Nouveau Dans Smart-Immo ?</small>
                        <h5 class="fw-bold ln-h25 mb-4 mt-2">Nous avons mis à jour notre politique d'annulation pour garantir l'expérience utilisateur</h5>
                        <a href="#" class="btn btn-sm btn-dashboard text-white fw-600 rounded-9">Voir Plus</a>
                    </div>
                    <div class="m-0 p-0 col-sm-5 order-0 order-sm-1">
                        <img src="{{ asset('assets/img/dashboard-updates.svg') }}" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="bg-white rounded-9 border p-4 top-list">
                    <div class="border-bottom mb-4">
                        <h6 class="mb-1 fw-bold">Meilleures annonces par revenu</h6>
                        <p class="text-muted fw-light small">Performance du mois</p>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-9 border p-2">
                            <span class="text-dark fw-bold h6 rounded-3">Janvier</span>
                        </div>
                        <div class="w-100 mx-3">
                            <div class="progress bg-white mb-1">
                                <div class="progress-bar bg-success rounded-pill" role="progressbar" style="width: 100%"
                                     aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress bg-white">
                                <div class="progress-bar bg-muted rounded-pill" role="progressbar" style="width: 60%"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <button class="ms-auto btn bg-light btn-sm px-4 py-2 rounded-9 text-muted">$0</button>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-9 border p-2">
                            <span class="text-dark fw-bold h6 rounded-3">Février</span>
                        </div>                            <div class="w-100 mx-3">
                            <div class="progress bg-white mb-1">
                                <div class="progress-bar bg-success rounded-pill" role="progressbar" style="width: 90%"
                                     aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress bg-white">
                                <div class="progress-bar bg-muted rounded-pill" role="progressbar" style="width: 65%"
                                     aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <button class="ms-auto btn bg-light btn-sm px-4 py-2 rounded-9 text-muted">$0</button>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="rounded-9 border p-2">
                            <span class="text-dark fw-bold h6 rounded-3">Mars</span>
                        </div>                            <div class="w-100 mx-3">
                            <div class="progress bg-white mb-1">
                                <div class="progress-bar bg-success rounded-pill" role="progressbar" style="width: 75%"
                                     aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress bg-white">
                                <div class="progress-bar bg-muted rounded-pill" role="progressbar" style="width: 30%"
                                     aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <button class="ms-auto btn bg-light btn-sm px-4 py-2 rounded-9 text-muted">$0</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}