<fieldset id="entry-form-fieldset-{{ property.id }}" class="p-0">
    <!-- Header / Summary -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <!-- Thumb -->
                <div class="col-5 col-sm-4 col-md-3">
                    <div class="ratio ratio-4x3 rounded-4 overflow-hidden border">
                        {% if property.image %}
                            <img src="{{ property.image }}" alt="Vignette du bien" class="w-100 h-100" style="object-fit:cover;">
                        {% else %}
                            <img src="{{ asset('assets/img/imageIcon.png') }}" alt="Aperçu indisponible" class="w-100 h-100" style="object-fit:cover;">
                        {% endif %}
                    </div>
                </div>

                <!-- Info -->
                <div class="col">
                    <div class="d-flex flex-wrap align-items-center gap-2 mb-1">
                        <span class="badge text-bg-light border text-danger text-uppercase fw-semibold">{{ property.type }}</span>
                        <small class="text-muted">ID&nbsp;#{{ property.code }}</small>
                    </div>
                    <p class="text-black mb-2 small">{{ property.header }}</p>

                    <div class="d-flex align-items-center flex-wrap gap-2">
                        <div class="h5 mb-0">
                            <span class="fw-bold">{{ property.price|format_currency('USD') }}</span>
                            <span class="text-muted small">
                / {% if property.periodicity == 'Daily' %}Jour{% else %}Mois{% endif %}
              </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-0">

        <!-- Relationship -->
        <div class="card-body pt-3">
            <p class="fw-bold mb-2">Dites-nous votre relation avec ce bien</p>

            <div class="form-floating d-flex align-items-end px-3 py-1 border rounded-3">
                <select
                        name="relationshipToProperty-{{ property.id }}"
                        id="relationshipToProperty-{{ property.id }}"
                        class="form-control border-0 px-0">
                    <option value="direct">Je suis le propriétaire (direct)</option>
                    <option value="intermediary" selected>Je suis mandataire / gestionnaire (intermédiaire)</option>
                    <option value="indirect">Je représente un tiers (indirect)</option>
                </select>
                <span class="my-auto mdi mdi-badge-account"></span>
                <label for="relationshipToProperty-{{ property.id }}" class="text-muted px-3 mt-1">
                    Votre relation avec le bien&nbsp;<span class="text-danger">*</span>
                </label>
            </div>
        </div>

        <hr class="my-0">

        <!-- Pre-publish checks -->
        <div class="card-body pt-3">
            <p class="fw-bold mb-2">Vérification avant de publier</p>

            {% if property.images.count < 4 %}
                <div class="alert alert-danger d-flex align-items-center py-2 mb-0 rounded-3" role="alert">
                    <i class="mdi mdi-camera-off me-2"></i>
                    <span class="small">Votre annonce ne contient pas les 4 photos demandées.</span>
                </div>
            {% elseif property.user.agentPhone == null %}
                <div class="alert alert-danger d-flex align-items-center py-2 mb-0 rounded-3" role="alert">
                    <i class="mdi mdi-phone-off-outline me-2"></i>
                    <span class="small">Votre numéro agent est invalide ou manquant.</span>
                </div>
            {% else %}
                <div class="alert alert-success d-flex align-items-center py-2 mb-0 rounded-3" role="alert">
                    <i class="mdi mdi-check-circle-outline me-2"></i>
                    <span class="small">Tout est prêt pour votre publication.</span>
                </div>
            {% endif %}
        </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ token }}">
</fieldset>


