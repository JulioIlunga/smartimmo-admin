{% extends 'agent_work_space/index.html.twig' %}

{% block title %}Services supplémentaires{% endblock %} 
{% block style %}
<style>
    /* Subtle semantic badges (fallback if your theme doesn't have them) */
    .bg-success-subtle{ background: rgba(25,135,84,.12) !important; }
    .border-success-subtle{ border-color: rgba(25,135,84,.35) !important; }
    .bg-danger-subtle{ background: rgba(220,53,69,.12) !important; }
    .border-danger-subtle{ border-color: rgba(220,53,69,.35) !important; }
    .fw-500{ font-weight:500; }

</style>
{% endblock %}

{% block bodyHeader %}
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 pb-3 border-bottom">
        <div>
            <h4 class="fw-bold mb-0">Services supplémentaires</h4>
            <div class="text-muted small">Catalogue</div>
        </div>

        <div class="d-flex align-items-center gap-2">
            {# Optional: space for filters/search later #}
            <button type="button"
                    class="btn btn-dark rounded-pill d-inline-flex align-items-center gap-2"
                    onclick="showFormCreateNewService()"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCenter">
                <i class="mdi mdi-plus-circle-outline"></i>
                Ajouter un service
            </button>
        </div>
    </div>
{% endblock %}

{% block bodyContent %}

    {% include 'agent_work_space/partials/_flag.html.twig' %}

    {% if services is empty %}
        <div class="card border-0 shadow-sm rounded-4 mt-4">
            <div class="card-body p-4 d-flex align-items-center justify-content-between gap-3">
                <div class="d-flex align-items-center gap-3">
                    <img src="{{ asset('assets/img/nodata.jpg') }}" class="img-fluid rounded-4" alt="" style="width:120px; height:auto;">
                    <div>
                        <h5 class="fw-bold mb-1">Aucun service</h5>
                        <p class="text-muted mb-0">Aucun service supplémentaire n’a été trouvé. Ajoutez votre premier service pour commencer.</p>
                    </div>
                </div>
                <button type="button"
                        class="btn btn-dark rounded-pill d-none d-md-inline-flex align-items-center gap-2"
                        onclick="showFormCreateNewService()"
                        data-bs-toggle="modal"
                        data-bs-target="#modalCenter">
                    <i class="mdi mdi-plus-circle-outline"></i>
                    Nouveau service
                </button>
            </div>
        </div>
    {% else %}

        <div class="card border-0 shadow-sm rounded-4 mt-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr class="text-muted">
                            <th scope="col" class="ps-4">#</th>
                            <th scope="col">Titre</th>
                            <th scope="col" class="text-end">Prix</th>
                            <th scope="col" class="text-center">Statut</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for service in services %}
                            <tr>
                                <th scope="row" class="ps-4">{{ loop.index }}</th>
                                <td class="fw-500">{{ service.name }}</td>

                                <td class="text-end">
                                    <span class="fw-semibold">{{ service.price|number_format(2, '.', ' ') }}</span>
                                    <span class="text-muted">USD</span>
                                </td>

                                <td class="text-center">
                                    {% if service.status %}
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success-subtle px-3 py-2">Activé</span>
                                    {% else %}
                                        <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger-subtle px-3 py-2">Désactivé</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    {% endif %}

    <script>
        function showFormCreateNewService() {
            getContentForModal("{{ path('additionnal_services_create') }}", "Ajouter un service");
        }
        function saveNewService() {
            const url = "{{ path('additionnal_services_create') }}";
            _doPost('#entry-form-new', url, '{{ path('additionnal_services') }}');
            return false;
        }
    </script>

{% endblock %}


